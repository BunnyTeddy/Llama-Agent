FROM python:3.12-slim

WORKDIR /app

# Install dependencies
COPY requirements-server.txt .
RUN pip install --no-cache-dir -r requirements-server.txt

# Copy backend source only
COPY server.py .
COPY tools/ tools/
COPY models/ models/
COPY agents/ agents/

EXPOSE 8080

CMD ["uvicorn", "server:app", "--host", "0.0.0.0", "--port", "8080"]
